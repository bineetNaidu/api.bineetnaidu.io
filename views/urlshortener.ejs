<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Url Shortener</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-CuOF+2SnTUfTwSZjCXf01h7uYhfOBuxIhGKPbfEJ3+FqH/s6cIFN9bGr1HmAg4fQ"
      crossorigin="anonymous"
    />
  </head>
  <body class="container my-5 p-5">
    <h1 class="text-center">Url Shortener</h1>
    <form id="urlShortener_form">
      <div class="mb-3">
        <label for="urlShortener_url" class="form-label">Url</label>
        <input type="text" class="form-control" id="urlShortener_url" />
      </div>
      <div class="mb-3">
        <label for="urlShortener_slug" class="form-label">*Unique Slug</label>
        <input type="text" class="form-control" id="urlShortener_slug" />
      </div>
      <button class="btn btn-success" type="submit" id="urlShortener_btn">
        Create!
      </button>
    </form>

    <div id="urlshortener_markdown my-3" class="container"></div>
  </body>

  <script>
    const urlShortenerBtn = document.querySelector('#urlShortener_btn');
    const urlShortenerUrl = document.querySelector('#urlShortener_url');
    const urlShortenerSlug = document.querySelector('#urlShortener_slug');
    const urlshortenerMarkdown = document.querySelector(
      '#urlshortener_markdown'
    );

    let markdown;
    let data;

    urlShortenerBtn.addEventListener('click', (e) => {
      console.log(urlShortenerUrl.value);
      e.preventDefault();
      if (urlShortenerSlug.value === '') {
        data = {
          url: urlShortenerUrl.value,
        };
      } else {
        data = {
          url: urlShortenerUrl.value,
          slug: urlShortenerSlug.value,
        };
      }
      fetch('/api/v1/urlshortener/', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      })
        .then((apiData) => apiData.json())
        .then((res) => {
          if (res.success) {
            markdown = `
            <h2>Original URL: <a href="${res.url.original_url}">${res.url.original_url}</a></h2>
            <h2>Slug: <a href="/api/vi/urlshortener/${res.url.slug}">${res.url.slug}</a></h2>
            `;
            urlshortenerMarkdown.innerHTML = markdown;
          } else {
            alert(res.error);
          }
        })
        .catch((e) => alert(e.message));
    });
  </script>
</html>
