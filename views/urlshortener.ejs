      data = {
        url: urlShortenerUrl.value,
      };
    } else {
      data = {
        url: urlShortenerUrl.value,
        slug: urlShortenerSlug.value,
      };
    }

    urlShortenerBtn.addEventListener('click', (e) => {
      e.preventDefault();
      // if (data) {
      fetch('/api/v1/urlshortener/', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
